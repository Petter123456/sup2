
<%= form_tag '/page1', method: :get %>
  Area of Assistance:
  <select class="productarea" name="assitance">
    <% @product_areas.each do |productarea| %>
    <option class="opts"> <%=productarea%>
    </option>
    <%end%>
  </select><br>
  Position: <%= text_field_tag :position, params[:position], :placeholder => 'Enter position title', class: 'position', :required => true%></br>

  Start Date:  <%= date_field_tag :start_date, params[:start_date], class: 'start_date', :required => true%></br>

  End Date:  <%= date_field_tag :end_date, params[:end_date], class: 'end_date', :required => true%></br>

  City:  <%= text_field_tag :city, params[:city], :placeholder => 'Enter city', class: 'city', :required => true%></br>

  Position Percentage:
  <select class="percentage">
    <% @position_percentage.each do |percentage| %>
      <option><%=percentage %></option>
    <%end%>
  </select></br>
  Minimum level of Experiance:
  <select class="experience">
    <% @level_of_experiance.each do |experiance| %>
      <option ><%=experiance%></option>
    <%end%>
  </select></br>

  Monthly Salary<%= text_field_tag :salary, params[:salary], class: 'salary'%>



  <!-- subitm button -->
  <button class="show">See Suppliers</button></br>
  <!-- Get right supplier deepending in city and product area -->
  <% if @suppliers.present? %>
    <% @suppliers.each do |supplier| %>
      <p class="supplier"><%= supplier.company %> <%= supplier.city %>
  <% if @assitance == "it" %>
    <p class="supplier">
      <%= supplier.prices.map {|p| p.it.to_f * @salary_divided_by_hours.floor } %> -
      <%= submit_tag 'välj leverantör', class: 'välj_leverator'%>
    </p>
  <% elsif @assitance == "marketing" %>
      <p class="supplier"><%= supplier.prices.map {|p| p.marketing.to_f} %>
      <%= submit_tag 'välj leverantör', class: 'välj_leverator'%>
      </p>
      <!-- #elseif   #@assitance == -->
  <%end%>
  <%end%>
<%end%>


<div class="wrapper_login_form">
  <div class="login_form">
    <p>Please sign in to complete order </p>
    <%= form_tag '/login' do %>
      <h1>Log In</h1>
      Email: <%= text_field_tag :email %><br><br>
      Password: <%= password_field_tag :password %><br><br>
      <%= submit_tag "Login", :class => 'login_button' %>
      <p>If your not registered, please <%= link_to "Sign-up", '/signup', class: 'link_to_signup_form' %> to continue</p>
    <% end %>
  </div>
</div>

<div class="wrapper_signup_form">
  <div class="signup_form">
      <%= form_for :user do |form| %>
      <p>Please fill in the fields below: </p>
      Name: <%= form.text_field :name %><br><br>
      Email: <%= form.text_field :email %><br><br>
      Password: <%= form.password_field :password %><br><br>
      Password Confirmation: <%= form.password_field :password_confirmation %><br><br>
      <%= form.submit "Sign Up"%>
      <% end %>
  </div>
</div>

<button type="button" name="button" class="order_button">Confirm Order</button>
